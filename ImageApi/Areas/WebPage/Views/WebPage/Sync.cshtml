@{
    ViewData["Title"] = "Sync analyze";
}

<script>
    $(document).ready(function () {
        $('#btnUpload').on('click',
            function() {
                var files = $('#fUpload').prop("files");
                var fdata = new FormData();
                for (var i = 0; i < files.length; i++) {
                    fdata.append("files", files[i]);
                }
                if (files.length > 0) {
                    $.ajax({
                        type: "POST",
                        url: "/api/comparesync",
                        data: fdata,
                        contentType: false,
                        processData: false,
                        success: function(response) {
                            $('#resultImg').attr('src',
                                '/api/image/' + response.imageId);
                            $('#errorLbl').html('');
                        },
                        error: function(textStatus, errorThrown) {
                            $('#errorLbl').html(textStatus.responseJSON.errorMessage);
                        }
                    });
                } else {
                    alert('Please select a file.');
                }
            });
    });
</script>

<form method="post" enctype="multipart/form-data"> 
    <div>
        <div>
            <input type="file" id="fUpload" name="files" multiple />
        </div>
    </div>
    <div>
        <div style="padding-top:10px;">
            <input type="button" id="btnUpload" value="Upload" />
        </div>
    </div>
</form>

<label>Result:</label><br/>
<img id="resultImg"/><br/>
<label id="errorLbl"></label>
